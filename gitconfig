# Windows Cygwin git (/etc/gitconfig) / msysgit (/Cygdrive/c/Program Files (x86)/Git/etc/gitconfig)
[core]
	editor = \"c:/Program Files/Sublime Text 3/sublime_text.exe\" -n -w
[diff]
	guitool = BeyondCompare
[difftool "BeyondCompare"]
	path = C:/Program Files (x86)/Beyond Compare 4/bcomp.exe
	cmd = \"C:/Program Files (x86)/Beyond Compare 4/bcomp.exe\" \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = BeyondCompare
[mergetool "BeyondCompare"]
	path = C:/Program Files (x86)/Beyond Compare 4/bcomp.exe
	cmd = \"C:/Program Files (x86)/Beyond Compare 4/bcomp.exe\" \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"

# OS X Xcode - /Applications/Xcode.app/Contents/Developer/usr/etc/gitconfig
[core]
	editor = \"/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl\" -n -w
[diff]
    tool = bcomp
[difftool]
    prompt = false
[difftool "bcomp"]
    trustExitCode = true
    cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
[merge]
    tool = bcomp
[mergetool]
    prompt = false
[mergetool "bcomp"]
    trustExitCode = true
    cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"